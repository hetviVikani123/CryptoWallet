# ================================
# ENVIRONMENT CONFIGURATION
# ================================
NODE_ENV=development
PORT=5000

# ================================
# DATABASE - SUPABASE (PRIMARY)
# ================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# ================================
# JWT AUTHENTICATION
# ================================
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here-min-64-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here-min-64-chars
JWT_REFRESH_EXPIRES_IN=30d

# ================================
# REDIS (Optional - for sessions)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# FIREBASE (Optional - for push notifications)
# ================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# ================================
# TWILIO (Optional - for SMS OTP)
# ================================
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ================================
# EMAIL - NODEMAILER (REQUIRED)
# ================================
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=CryptoWallet <your-email@gmail.com>

# ================================
# CLOUDINARY (Optional - for uploads)
# ================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ================================
# ADMIN CREDENTIALS
# ================================
ADMIN_EMAIL=admin@cryptowallet.com
ADMIN_PASSWORD=Admin@123

# ================================
# FRONTEND URL (for CORS)
# ================================
FRONTEND_URL=http://localhost:3001

# ================================
# API VERSION
# ================================
API_VERSION=v1
